@model lab3.Models.DataModels.UserRegistration
@{
    ViewBag.Title = "User Signup";
    ViewBag.showHeader = false;
}
@section Styles{
    <style>
        .form-signin {
            width: 100%;
            max-width: 420px;
            padding: 15px;
            margin: 0 auto;
        }
    </style>
}
<div class="panel panel-default">
    @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form-signin" }))
    {
        if (TempData["errorMsg"] != null)
        {
            <span class="text-danger">@TempData["errorMsg"]</span>
        }
        <div class="text-center mb-4">
            <img class="mb-4" src="https://img.icons8.com/external-flatart-icons-outline-flatarticons/64/000000/external-link-contact-flatart-icons-outline-flatarticons.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">User Registration</h1>
        </div>

        <div class="form-label-group mb-3">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required", @placeholder = "Enter Name", @autofocus = "true" })
        </div>

        <div class="form-label-group mb-3">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @required = "required", @placeholder = "Email address", @autofocus = "true" })
        </div>

        <div class="form-label-group mb-3">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @placeholder = "Password" })
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    }
</div>
